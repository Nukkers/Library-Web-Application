<h1>Author: {{author.name}}</h1>

<p>{{author.date_of_birth}} - {{author.date_of_death}}</p>

<div style="margin-left:20px;margin-top:20px">
    <h4>Books</h4>
    <dl>
        {{#each author_books}}
            <dt>
                <a href="{{this.url}}">{{this.title}}</a>
            </dt>
            <dd>
                {{this.summary}}
            </dd>
        {{/each}}
    </dl>
</div>